import java.util.*;
import java.Math;

public class schoolspirit {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();

        int count = 0;
        
        for(int i=0;i<N;i++){
            int score = sc.nextInt();
            count+=score*(Math.pow(0.8,i));
        }
    }
}
